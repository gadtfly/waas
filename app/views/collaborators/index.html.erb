<h3>Collaborators</h3>
<hr>
<div class="row">
<% @wiki.users.each do |user| %>
  <div class="col-md-3">
    <div class="well text-center">
      <p class="thumbnail"><%= image_tag "blur-sm.jpg" %></p>
      <p><i class="fa fa-question-circle fa-5x text-muted"></i></p>
      <h4><%= user.email %></h4>
      <p><%= user.role %></p>TODO REMOVE COLLABORATOR
      <%= link_to 'remove collaborator', wiki_collaborators_path(@wiki, user_id: user.id), method: :post, class: 'btn btn-secondary' %>
    </div> <!-- /.well -->
  </div>
<% end %>
</div>


<h3>Users</h3>
<hr>
<div class="row">
<% @wiki.not_users.each do |user| %>
  <div class="col-md-3">
    <div class="well text-center">
      <p class="thumbnail"><%= image_tag "blur-sm.jpg" %></p>
      <p><i class="fa fa-question-circle fa-5x text-muted"></i></p>
      <h4><%= user.email %></h4>
      <p><%= user.role %></p>
      <%= link_to 'make collaborator', wiki_collaborators_path(@wiki, user_id: user.id), method: :post, class: 'btn btn-secondary' %>
    </div> <!-- /.well -->
  </div>
<% end %>
</div>