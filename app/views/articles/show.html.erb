<h1><%= @article.title %> <small><%= link_to 'edit', edit_wiki_article_path(@wiki, @article) %> | from wiki <%= @wiki.title %></small></h1>


<h3>Comments</h3>
<hr>
<% @article.comments.each do |comment| %>
<div class="testimonial">
  <p class="testimonial-text">
    <%= comment.info %>
  </p>
  <div class="testimonials-arrow"></div>
  <div class="testimonial-author">
    <div class="testimonial-image"><%= image_tag "blur-sm.jpg" %>
    <div class="testimonial-author-info">
      <h5><%= comment.user.email %></h5>
    </div>
  </div>
</div> <!-- /.testimonial -->
</div>
<% end %>


<h3>Add Comment</h3>
<hr>

<%= form_for([@wiki, @article, @comment]) do |f| %>
  <div class="form-group">
    <%= f.label :info %>
    <%= f.text_area :info, class: 'form-control' %>
  </div>
  <%= f.submit class: 'btn btn-primary' %>
<% end %>