<header class="navbar navbar-inverse" role="banner">
  <div class="container">
    <div class="navbar-header">
      <button class="navbar-toggle" type="button" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <i class="fa fa-cog"></i>
      </button>
      <%=  link_to 'WAAS', root_path, class: 'navbar-brand' %>
    </div> <!-- /.navbar-header -->

    <nav class="collapse navbar-collapse" role="navigation">   
      <ul class="nav navbar-nav navbar-right mainnav-menu">     
        <% if user_signed_in? %>
          <li><%= link_to 'public wikis', wikis_path %></li>
          <li><%= link_to 'my wikis', user_path(current_user) %></li>
          <li><%= link_to 'collaborators', users_path %></li>
          <li class="dropdown navbar-profile">
            <a class="dropdown-toggle" data-toggle="dropdown" href="javascript:;">
              <%= image_tag(current_user.avatar.small.url, class: 'navbar-profile-avatar') %>
              <%#= image_tag "blur-sm.jpg", class: "navbar-profile-avatar" %>
              <span class="navbar-profile-label"><%= current_user.email %></span>
              <i class="fa fa-caret-down"></i>
            </a>
            <ul class="dropdown-menu" role="menu">
              <li>
                <%= link_to user_path(current_user) do %>
                  <i class="fa fa-user"></i> My Wikis
                <% end %>
              </li>
              <li>
                <%= link_to edit_user_registration_path(current_user) do %>
                  <i class="fa fa-cogs"> Settings</i>
                <% end %>
              </li>
              <li class="divider"></li>
              <li>
                <%= link_to destroy_user_session_path, method: :delete do %>
                  <i class="fa fa-sign-out"> Logout</i> 
                <% end %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to 'pricing', new_charge_path %></li>
          <li><%= link_to 'sign in', new_user_session_path %></li>
          <li><%= link_to 'register', new_user_registration_path %></li>
        <% end %>   
      </ul>
    </nav>

  </div> <!-- /.container -->

</header>