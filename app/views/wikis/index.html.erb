<h1>Public Wikis</h1>
<hr>

<div class="row">
  <% @wikis.each do |wiki| %>
  <% if wiki.pubilc %>
  <div class="recent-news-item clearfix"><div class="recent-news-item-date"><%= wiki.created_at.strftime("%d") %><span><%= wiki.created_at.strftime("%b") %></span></div>
    <div class="recent-news-item-description">
      <h3 class="recent-news-item-title"><%= link_to wiki.title, wiki %></h3>
      <span class="recent-news-item-comments"><%= link_to wiki.articles.count, wiki_articles_path(wiki) %> Articles</span></br>
      <div class="recent-news-item-excerpt">
        <p><%= truncate(wiki.information, length: 200) %> <%= link_to 'read more ->', wiki %></p>
        </div>
    </div>
  </div> <!-- wiki-item -->
    <% end %>
  <% end %>
</div>

                  <% @wikis.each do |wiki| %>
                    <% if wiki.pubilc %>
                  <div class="well">
                  <div class="testimonial">
                    
                     <h5><%= link_to wiki.title, wiki %></h5>
                    <p class="testimonial-text">
                    <%= truncate(wiki.information, length: 200) %> <%= link_to 'read more ->', wiki %>
                    </p>

                    <div class="testimonials-arrow"></div>

                    <div class="testimonial-author">
                      <div class="testimonial-image"></div>

                      <div class="testimonial-author-info">
                        <h5><a href="#">Rod Howard</a></h5> Company
                      </div>
                    </div>
                  </div> <!-- /.testimonial -->
                </div>
                <% end %>
                <% end %>

                
